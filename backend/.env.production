# Production Environment Configuration
# IMPORTANT: Replace all placeholder values with actual production values

# Application
NODE_ENV=production
PORT=5000
BASE_URL=https://your-domain.com
FRONTEND_URL=https://your-frontend-domain.com

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/luxury-ecommerce?retryWrites=true&w=majority
DB_NAME=luxury-ecommerce

# Redis Cache
REDIS_URL=redis://username:password@your-redis-host:6379

# JWT
JWT_SECRET=your-super-secure-jwt-secret-minimum-256-bits
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret
JWT_REFRESH_EXPIRES_IN=30d

# Stripe Payment
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM=noreply@your-domain.com
COMPANY_NAME=Your Luxury Store
SUPPORT_EMAIL=support@your-domain.com

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
GA_MEASUREMENT_SECRET=your_ga4_measurement_secret

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=5

# File Upload & CDN
CDN_BASE_URL=https://your-cdn.cloudfront.net
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/luxury-ecommerce/app.log

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key

# SSL/TLS (if handling certificates at app level)
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Session
SESSION_SECRET=your-super-secure-session-secret

# CORS
CORS_ORIGIN=https://your-frontend-domain.com,https://admin.your-domain.com

# Rate Limiting
REDIS_RATE_LIMIT_PREFIX=rl:
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=900

# Image Processing
IMAGE_QUALITY_DEFAULT=85
IMAGE_MAX_SIZE=10485760
WATERMARK_ENABLED=true

# Search (if using external search service)
ELASTICSEARCH_URL=https://your-elasticsearch-cluster.com
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_api_key

# Social Media Integration (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
GOOGLE_CLIENT_ID=your_google_client_id
TWITTER_API_KEY=your_twitter_api_key

# Webhooks
WEBHOOK_SIGNATURE_SECRET=your-webhook-signature-secret

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Performance
COMPRESSION_ENABLED=true
GZIP_LEVEL=6
CACHE_CONTROL_MAX_AGE=86400